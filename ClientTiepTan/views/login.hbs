{{>header}}
<style>
  
.login-box {
  background: white;
  padding: 30px 25px;
  border: 1px solid #ccc;
  border-radius: 6px;
  width: 300px;
  box-shadow: 0 0 10px rgba(0,0,0,0.05);
  margin: 0 auto;
  margin-top: 30px;
}

.login-box h2 {
  margin-bottom: 20px;
  text-align: center;
}

.login-box label {
  display: block;
  margin-bottom: 5px;
  font-weight: bold;
}

.login-box input {
  width: 100%;
  padding: 8px;
  margin-bottom: 15px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.login-box button {
  width: 100%;
  padding: 10px;
  background: #4285f4;
  color: white;
  border: none;
  border-radius: 4px;
  font-weight: bold;
  cursor: pointer;
}

.login-box button:hover {
  background: #357ae8;
}

</style>
<div class="login-box">
  <h2>Đăng Nhập</h2>
  <form id="loginForm" action="/login" method="post">
    <label for="maSo">Mã số NV</label>
    <input type="text" id="edt_maso" name="edt_maso" placeholder="Nhập mã số nv" required>

    <label for="matkhau">Mật khẩu</label>
    <input type="password" id="edt_mk" name="edt_mk" placeholder="Nhập mật khẩu" required>

    <button type="submit" id="btnLogin">Đăng nhập</button>
  </form>
</div>

{{>footer}}
</form>